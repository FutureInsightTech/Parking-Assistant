    <title>Add User</title>
</head>
<body>
    <div class="banner">
            <div class="navbar">
                <img  src="/image/logo2.jpg"class="logo">
                <ul>
                    <li><a href="/logout">Logout</a></li>
                    <li><a href="/manager-dashboard">Dashboard</a></li>
                </ul>
            </div>
            <form action="/auth/register" method="POST">
                <h2>Add User Account</h2>
                <label>Name</label>
                <input type="text" name="user_name" placeholder="User Name" id="user_name">
                <label>Email</label>
                <input type="text" name="user_email" placeholder="User Email" id="user_email">
                <label>Password</label>
                <input type="password" name="user_password" placeholder="User Password" id="user_password">
                <label>Date of Birth</label>
                <input type="date" name="DOB" placeholder="User Date of Birth" id="DOB">
                <button class="btn" type="submit">Create User Account</button>
            </form>        
    </div>
    
</body>
</html>